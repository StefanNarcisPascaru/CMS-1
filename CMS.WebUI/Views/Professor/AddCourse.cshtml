@model CMS.WebUI.ViewModels.Subject
@{
    ViewData["Title"] = "New course";
}

<div class="row">
    <div class="col-md-4 mx-auto float-xs-none">
        <div class="card center-block">
            <div class="card-block">
                <!--Header-->
                <div class="col-md-5 mx-auto float-xs-none">
                    <h3><i class="fa fa-book"></i> New course:</h3>
                </div>
                @using (Html.BeginForm())
                {

                    @Html.AntiForgeryToken()

                    <div class="md-form">
                        <i class="fa fa-user prefix"></i>
                        @Html.TextBoxFor(m => m.SubjectName, new { @class = "form-control validate" })
                        @Html.LabelFor(m => m.SubjectName)
                        @Html.ValidationMessageFor(m => m.SubjectName, null, new { @class = "text-danger" })
                    </div>

                    <br />

                    <div class="md-form">
                        <i class="fa fa-lock prefix"></i>
                        @Html.TextBoxFor(m => m.TeacherName, new { @class = "form-control validate" })
                        @Html.LabelFor(m => m.TeacherName)
                        @Html.ValidationMessageFor(m => m.TeacherName, null, new { @class = "text-danger" })
                    </div>

                    <br />

                    <div class="text-xs-center">
                        <button type="submit" id="alert-target" class="btn btn-default">Add</button><br />
                    </div>
                }
            </div>
        </div>
    </div>
</div>