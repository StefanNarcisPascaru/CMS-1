@model CMS.WebUI.ViewModels.UserLogin
<div class="row">
    <div class="container col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 col-sm-6 col-sm-offset-3">
        <h3 class="table-striped">Login</h3>
        <form asp-controller="Account" asp-action="Login" asp-antiforgery="true" method="post">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="padded-row-form">
                <input class="form-control" type="text" name="username" placeholder="username" /> <span asp-validation-for="UserName"></span>
                @*@Html.ValidationMessageFor(ul => ul.UserName)*@
            </div>
            <div class="padded-row-form">
                <input class="form-control" type="password" name="password" placeholder="password" />
                @Html.ValidationMessageFor(ul => ul.Password)
            </div>
            <div class="padded-row-form">
                <input class="login-checkbox" type="checkbox" asp-for="RememberMe" />
                <span>@Html.DisplayNameFor(ul => ul.RememberMe)</span>
            </div>
            <div class="padded-row-form">
                <input class="form-control" type="submit" title="submit" />
            </div>
            <div class="text-danger" asp-validation-summary="All"></div>

        </form>
    </div>

</div>