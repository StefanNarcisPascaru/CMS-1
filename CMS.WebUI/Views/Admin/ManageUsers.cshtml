@model IList<CMS.WebUI.ViewModels.UserDto>
Manage Users

<div id="data" hidden> @Model</div>

<div class="grid">
    <div class="row header-grid">
        <div class="col-md-1">Nr.</div>
        <div class="col-md-2">Nume utilizator</div>
        <div class="col-md-4">Nume complet</div>
        <div class="col-md-4">Roluri</div>
        <div class="col-md-1">Editeaza</div>
    </div>
    @for (var i = 0; i < @Model.Count; i++)
    {
        <div class="row grid-row">
            <div class="col-md-1 index">@(i + 1)</div>
            <div class="col-md-2">@Model.ElementAt(i).User.UserName</div>
            <div class="col-md-4">@Model.ElementAt(i).User.CompleteName</div>
            <div class="col-md-4">
                @foreach (var rank in Model.ElementAt(i).Ranks)
                {
                    <span>@rank.Name</span>
                }
            </div>
            <div class="col-md-1">
                <button type="button" class="btn btn-primary btn-default btn-xs">
                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                </button>
            </div>
        </div>
    }
</div>
